program Practica1Parte2Ejercicio1b;

var
    numero: integer;
    suma: integer;
    mayores: integer;
    i: integer;

begin
    suma:=0;
    mayores:=0;
    for i:=1 to 10 do
        begin
            writeln ('Ingrese un numero entero');
            readln (numero);
            suma:=suma+numero;
            if (numero>5) then
                mayores:=mayores+1
        end;
    writeln ('La suma de los diez numeros ingresados es: ', suma);
    writeln ('La cantidad de numeros mayores a 5 es: ', mayores);
end.
